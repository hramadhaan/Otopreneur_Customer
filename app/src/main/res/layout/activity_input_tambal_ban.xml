<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.Fitur.InputTambalBan">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/input_tb_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/input_tb_toolbar"
            android:layout_width="match_parent"
            app:theme="@style/Widget.AppCompat.ActionBar.TabBar"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_tb_judul"
                    android:layout_centerHorizontal="true"
                    android:text="Tambal Ban"
                    android:textSize="18dp"
                    android:textColor="#282F39"
                    android:fontFamily="@font/sfbold"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F5F7"
        android:layout_below="@id/input_tb_appbar">

        <RelativeLayout
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Kendaraan"
                android:fontFamily="@font/sfbold"
                android:textSize="16dp"
                android:id="@+id/tb_nama_kendaraan"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tb_input_nama_kendaraan"
                android:layout_below="@id/tb_nama_kendaraan"
                android:hint="Masukkan Tipe Kendaraan"/>

            <TextView
                android:layout_below="@id/tb_input_nama_kendaraan"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:fontFamily="@font/sfbold"
                android:textSize="16dp"
                android:id="@+id/tb_catatan"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tb_input_catatan"
                android:layout_below="@id/tb_catatan"
                android:hint="Masukkan Tipe Kendaraan"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_below="@id/tb_input_catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Kendaraan"
                android:fontFamily="@font/sfbold"
                android:textSize="16dp"
                android:id="@+id/tb_lokasi"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tb_input_lokasi"
                android:layout_below="@id/tb_lokasi"
                android:hint="Masukkan Tipe Kendaraan"/>

            <Button
                android:id="@+id/input_tb_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_login"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:text="Next"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sf"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>