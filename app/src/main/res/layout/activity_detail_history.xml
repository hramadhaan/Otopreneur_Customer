<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.Fitur.History_Order.DetailHistory">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/orderhistory_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/orderhistory_toolbar"
            android:layout_width="match_parent"
            app:theme="@style/Widget.AppCompat.ActionBar.TabBar"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderhistory_judul"
                    android:layout_centerHorizontal="true"
                    android:text="Order"
                    android:textSize="18dp"
                    android:textColor="#282F39"
                    android:fontFamily="@font/sfbold"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/orderhistory_appbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderhistory_tv_customer"
                android:text="Customer"
                android:textSize="18dp"
                android:fontFamily="@font/sfbold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderhistory_customer"
                android:layout_below="@id/orderhistory_tv_customer"
                android:text="Cecep"
                android:fontFamily="@font/sf"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/orderhistory_tv_tipkendaraan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderhistory_customer"
                android:layout_marginTop="10dp"
                android:text="Tipe Kendaraan"
                android:fontFamily="@font/sfbold"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderhistory_tipekendaraan"
                android:text="Vega ZR"
                android:fontFamily="@font/sf"
                android:textSize="16dp"
                android:layout_below="@id/orderhistory_tv_tipkendaraan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderhistory_tv_tipeservice"
                android:text="Tipe Service"
                android:fontFamily="@font/sfbold"
                android:textSize="18dp"
                android:layout_below="@id/orderhistory_tipekendaraan"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderhistory_tipeservice"
                android:text="Tambal Ban"
                android:layout_below="@id/orderhistory_tv_tipeservice"
                android:fontFamily="@font/sf"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:fontFamily="@font/sfbold"
                android:id="@+id/orderhistory_tv_lokasi"
                android:textSize="18dp"
                android:layout_below="@id/orderhistory_tipeservice"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderhistory_lokasi"
                android:text="Jl. Soekarno Hatta"
                android:layout_below="@id/orderhistory_tv_lokasi"
                android:fontFamily="@font/sf"
                android:textSize="16dp"/>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>