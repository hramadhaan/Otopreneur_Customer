<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="3dp"
    android:id="@+id/item_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_bengkel_nama"
            android:fontFamily="@font/sfbold"
            android:maxLength="20"
            android:textSize="16dp"
            android:text="Bengkel Persatuan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_bengkel_alamat"
            android:textSize="14dp"
            android:maxLength="30"
            android:text="Jl. Sukamenak No.12"
            android:layout_marginTop="5dp"
            android:layout_below="@id/item_bengkel_nama"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_bengkel_harga"
            android:layout_below="@id/item_bengkel_alamat"
            android:maxLength="15"
            android:layout_marginTop="3dp"
            android:text="Rp. 10.000 - Rp. 15.000"
            android:fontFamily="@font/sfbold"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/item_bengkel_foto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>