<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/depan_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTOPEDIA"
        android:src="@drawable/waiting_logo"
        android:fontFamily="@font/sfbold"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/depan_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/powered" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <Button
            android:layout_marginHorizontal="20dp"
            android:id="@+id/depan_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login"
            android:textColor="#fff"
            android:text="Login"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/depan_progress"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:text="Sign Up"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/depan_login"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:id="@+id/depan_google"/>

    </RelativeLayout>

</RelativeLayout>